<div class="container">

<h1 class="text-center">My Decisions</h1>

<ul class="decisionsList">

<% @decisions.each do |d| %>

	<li>
		<div class="col-md-6 decTxt pull-left">
			<%= link_to d.text, decision_criteria_path(d.id) %>
		</div>
		<div class="col-md-2">
		</div>
		<div class="col-md-3">
			<%= link_to "make this decision!", decision_criteria_path(d.id), :class => "btn btn-default btn-md btn-green wider" %>
		</div>
		<div class="col-md-1">
			<%= button_to " X ", decision_path(d.id), :class => "btn btn-default btn-md btn-reder", method: :delete %>
		</div>
	</li>

<% end %>

</ul>

<br />

	<div class="addCrit text-center">
		
		<%= link_to "Add a new decision", new_decision_path if current_user %>
	</div>

</div>