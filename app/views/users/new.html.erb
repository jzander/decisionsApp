<div class="container">

	<h1 class="text-center">Welcome to the Decisionator.</h1>
	<h3 class="text-center">Sign up to get help making a decision!</h3>

	<div class="signUpForm text-center">

		<%= form_for @user do |f| %>
			<%= f.text_field :name, placeholder: "What is your name?" %> 
			<%= f.text_field :email, placeholder: "Email" %>
			<%= f.password_field :password, placeholder: "password..." %>
			<%= f.password_field :password_confirmation, placeholder: "re-enter password" %>
			<%= f.submit "submit", :class => "btn btn-default btn-md btn-blue" %>
		<% end %>

	</div>
	
	<br /><br />
	<h3 class="text-center">Already have an account? </h3>
	<h4 class="text-center">Sign in below.</h4>

		<div class="logIn text-center ">

			<h1 class="text-center">Log in</h1><br />

			<%= form_for @user, {url: session_path} do |f| %>
				<%= f.text_field :email, placeholder: "Email", :class => "inputEmail" %><br />
				<%= f.password_field :password, placeholder: "password" %><br />
				<%= f.submit "Log in", :class => "btn btn-default btn-md btn-blue" %>
			<% end %>

		</div>



